    <script>
        $(document).ready(function () {
            // Function to fetch and update notifications
            function fetchNotifications() {
                $.ajax({
                    url: '/Notification/GetNotifications',
                    method: 'GET',
                    success: function (data) {
                        // Load the notifications into the dropdown
                        $('#notification-container').html(data);

                        // Update the total notification count
                        var totalNotifications = $('#notification-container .dropdown-item').length - 2; // Exclude "See All Notifications"
                        console.log(totalNotifications);
                        $('#TotalNotifications').text(totalNotifications > 0 ? totalNotifications : '');
                        if (totalNotifications > 0) {
                            $('#TotalNotifications').text(totalNotifications).show();
                        } else {
                            $('#TotalNotifications').hide();
                        }
                    }
                });
            }

            // Fetch notifications on page load
            fetchNotifications();

            // Optionally, refresh notifications periodically (e.g., every 60 seconds)
            setInterval(fetchNotifications, 60000); // Refresh every 60 seconds
        });
    </script>

    <script>
        $(document).ready(function () {
            // Connect to SignalR hub
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .build();

            connection.start().then(function () {
                console.log("SignalR Connected.");
            }).catch(function (err) {
                return console.error(err.toString());
            });

            // Listen for notifications
            connection.on("ReceiveNotification", function (message, totalNotifications) {
                // Update the notification dropdown
                const newNotification = `
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-envelope mr-2"></i> ${message}
                            <span class="float-right text-muted text-sm">Just now</span>
                        </a>
                        <div class="dropdown-divider"></div>
                    `;
                $('#notification-container').prepend(newNotification);

                // Update the badge count
                $('#TotalNotifications').text(totalNotifications > 0 ? totalNotifications : '');
            });
        });
    </script>


